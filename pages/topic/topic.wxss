/**index.wxss**/
.list{
 display: flex;
 flex-direction: column;
}
.list-item{
  padding:10px 5px;
  border-bottom:5px solid #888888; 
}
.list-item-box{
  margin-bottom: 10px;
}
.list-item-box:first-child{
  display: flex;
  align-items: center;
}
.list-item-box:last-child{
  margin-bottom: 0;
}
.list-item-avart{
  width: 30px;
  height: 30px;
}
.list-item-name{
  font-size:16px;
  color:#888888;
  margin-left:5px;
  
}
.list-item-title{
  font-size:18px;
  color:#353535;
}
.list-item-box:last-child{
  display: flex;
  justify-content: space-between;
}
.list-item-replies{
  font-size: 13px;
  color:#888888;
}
.list-item-node{
  border:1px solid #ccc;
  border-radius: 2px;
  padding:3px;
  font-size: 13px;
  color:#888888;
  
}
.list-item-replies{
  border:1px solid #ccc;
  border-radius:12px;
  padding:2px 10px;
}