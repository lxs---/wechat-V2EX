/* pages/node/node.wxss */
.node{
  width: 98%;
  padding:0 1%;
  display: flex;
  justify-content: space-between;
  flex-flow: wrap;

}
.node-item{
  width: 32%;
  margin-bottom:10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border:1px solid #353535;
  border-radius: 3px;
}
.node-item-name{
  width:100%;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  text-align: center;
  font-size:14px;
  color:#353535;
}
.node-item-topics{
  font-size: 11px;
  color:#888888;
}